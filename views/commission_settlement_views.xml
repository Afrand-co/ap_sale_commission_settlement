<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Extend Commission Settlement List View -->
    <record id="view_settlement_tree_inherit" model="ir.ui.view">
        <field name="name">commission.settlement.tree.inherit</field>
        <field name="model">commission.settlement</field>
        <field name="inherit_id" ref="commission.commission_settlement_view_tree"/>
        <field name="arch" type="xml">
            <!-- Add invoice_id field after agent_id or any other field -->
            <xpath expr="//field[@name='agent_id']" position="after">
                <field name="invoice_id" optional="show"/>
            </xpath>
        </field>
    </record>
    
    <!-- Extend Commission Settlement Form View (optional) -->
    <record id="view_settlement_form_inherit" model="ir.ui.view">
        <field name="name">commission.settlement.form.inherit</field>
        <field name="model">commission.settlement</field>
        <field name="inherit_id" ref="commission.commission_settlement_view_form"/>
        <field name="arch" type="xml">
            <!-- Add invoice_id field in the header or group -->
            <xpath expr="//field[@name='agent_id']" position="after">
                <field name="invoice_id" readonly="1"/>
            </xpath>
        </field>
    </record>
    
</odoo>

